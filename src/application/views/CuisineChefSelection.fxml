<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.CuisineChefSelectionController">
    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0" />
    </padding>
    <Label text="Select Cuisine and Chef" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-margin-bottom: 20px;" />
    <ComboBox fx:id="cuisineComboBox" promptText="Select Cuisine" prefWidth="300.0" style="-fx-padding: 10px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-background-color: #f8f8f8;" />
    <ComboBox fx:id="sortComboBox" promptText="Sort By" prefWidth="300.0" style="-fx-padding: 10px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-background-color: #f8f8f8;" />
    <ListView fx:id="chefListView" prefWidth="300.0" prefHeight="250.0" style="-fx-border-color: #ddd; -fx-border-radius: 5px;" />
    <HBox spacing="15" alignment="CENTER" style="-fx-margin-top: 20px;">
        <Button text="Select Chef" style="-fx-padding: 10px 20px; -fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-background-radius: 5px;" onAction="#handleSelectChef" />
        <Button text="Back" style="-fx-padding: 10px 20px; -fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-background-radius: 5px;" onAction="#handleBack" />
    </HBox>
</VBox>