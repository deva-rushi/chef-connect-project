<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.SelectChefForOrderController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-margin-bottom: 20px;" text="Select a Chef for Your Order" />
    <ComboBox fx:id="sortComboBox" prefWidth="250.0" promptText="Sort By" style="-fx-padding: 10px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-background-color: #f8f8f8;" />
    <ListView fx:id="chefsListView" prefHeight="250.0" prefWidth="250.0" style="-fx-border-color: #ddd; -fx-border-radius: 5px; -fx-padding: 10px;" />
    <HBox alignment="CENTER" spacing="15" style="-fx-margin-top: 20px;">
        <Button mnemonicParsing="false" onAction="#handleSelectChef" prefHeight="48.0" prefWidth="128.0" style="-fx-padding: 10px 20px; -fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Select Chef" />
        <Button mnemonicParsing="false" onAction="#handleBack" prefWidth="120.0" style="-fx-padding: 10px 20px; -fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-border-color: #ddd; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Back" />
    </HBox>
</VBox>
