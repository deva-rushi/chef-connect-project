<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="20" maxWidth="350.0">
            <padding>
                <Insets top="60.0" right="40.0" bottom="60.0" left="40.0" />
            </padding>
            <Label text="ChefConnect Login" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-margin-bottom: 20px;" />
            <TextField fx:id="usernameField" promptText="Username" prefWidth="300.0" style="-fx-padding: 10px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-background-color: #f8f8f8;" />
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300.0" style="-fx-padding: 10px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-background-color: #f8f8f8;" />
            <ComboBox fx:id="roleComboBox" promptText="Select Role" prefWidth="300.0" style="-fx-padding: 10px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-background-color: #f8f8f8;" />
            <HBox spacing="15" alignment="CENTER" style="-fx-margin-top: 20px;">
                <Button fx:id="loginButton" onAction="#handleLogin" text="Login" style="-fx-padding: 10px 20px; -fx-background-color: #546E7A; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-background-radius: 5px;" prefWidth="120.0" />
                <Button fx:id="signupButton" onAction="#handleSignup" text="Sign Up" style="-fx-padding: 10px 20px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-background-radius: 5px;" prefWidth="120.0" />
            </HBox>
        </VBox>
    </center>
</BorderPane>